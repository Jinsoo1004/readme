<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alt.readmeuserservice.mapper.UserMapper">

    <resultMap id="user" type="com.alt.readmeuserservice.domain.user.User">
        <result property="idx" column="idx" />
        <result property="name" column="name" />
        <result property="image" column="image" />
        <result property="email" column="email" />
        <result property="password" column="password" />
        <result property="type" column="type" />
        <result property="location" column="location" />
        <result property="intro" column="intro" />
    </resultMap>
    <resultMap id="student" type="com.alt.readmeuserservice.domain.user.Student">
        <result property="idx" column="idx" />
        <result property="birth" column="birth" />
        <result property="grade" column="grade" />
    </resultMap>
    <resultMap id="school" type="com.alt.readmeuserservice.domain.user.School">
        <result property="idx" column="idx" />
        <result property="school_type" column="type" />
        <result property="student" column="student" />
        <result property="satisfaction" column="satisfaction" />
    </resultMap>
    <resultMap id="enterprise" type="com.alt.readmeuserservice.domain.user.Enterprise">
        <result property="idx" column="idx" />
        <result property="income" column="income" />
        <result property="employee" column="employee" />
    </resultMap>
    <select id="getByEmail" resultMap="user">
        SELECT * FROM user WHERE email = #{email};
    </select>
    <insert id="register" parameterType="com.alt.readmeuserservice.domain.user.User" useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO user(
            email
            , name
            , location
            , password
            , type
        )
        VALUE
        (
            #{email}
            , #{name}
            , #{location}
            , #{password}
            , #{type}
        )
    </insert>
    <insert id="registerStudent" parameterType="com.alt.readmeuserservice.domain.user.Student">
        INSERT INTO student(
              idx
            , birth
            , grade
        )
        VALUE
        (
            #{idx}
            , #{birth}
            , #{grade}
        )
    </insert>
    <insert id="registerSchool" parameterType="com.alt.readmeuserservice.domain.user.School">
        INSERT INTO school(
             idx
           , type
           , student
           , satisfaction
        )
        VALUE
        (
            #{idx}
            , #{school_type}
            , #{student}
            , 0
        )
    </insert>
    <insert id="registerEnterprise" parameterType="com.alt.readmeuserservice.domain.user.Enterprise">
        INSERT INTO enterprise(
              idx
            , income
            , employee
        )
        VALUE
        (
              #{idx}
            , #{income}
            , #{employee}
        )
    </insert>
</mapper>