<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alt.readsearchservice.mapper.SchoolMapper">

    <resultMap id="user" type="com.alt.readsearchservice.domain.user.User">
        <result property="idx" column="idx" />
        <result property="name" column="name" />
        <result property="image" column="image" />
        <result property="email" column="email" />
        <result property="password" column="password" />
        <result property="type" column="type" />
        <result property="location" column="location" />
        <result property="intro" column="intro" />
    </resultMap>
    <resultMap id="school" type="com.alt.readsearchservice.domain.user.School">
        <result property="idx" column="idx" />
        <result property="name" column="name" />
        <result property="image" column="image" />
        <result property="email" column="email" />
        <result property="password" column="password" />
        <result property="type" column="type" />
        <result property="location" column="location" />
        <result property="intro" column="intro" />
        <result property="schoolType" column="birth" />
        <result property="satisfaction" column="satisfaction" />
    </resultMap>

    <select id="get" resultMap="school">
        SELECT * FROM user u
        INNER JOIN school s
        ON u.idx = s.idx

        WHERE u.idx = #{idx}
    </select>
    <select id="getStudentCount" resultMap="int">
        SELECT COUNT(*) AS count
        FROM student

        where belong = #{idx};
    </select>
    <select id="getByEmail" resultMap="school">
        SELECT * FROM user u
        INNER JOIN school s
        ON u.idx = s.idx

        WHERE email = #{email}
    </select>
    <select id="getByName" resultMap="school">
        SELECT * FROM user u
        INNER JOIN school s
        ON u.idx = s.idx

        WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>
</mapper>