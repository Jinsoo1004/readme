<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alt.readsearchservice.mapper.EnterpriseMapper">

    <resultMap id="user" type="com.alt.readsearchservice.domain.user.User">
        <result property="idx" column="idx" />
        <result property="name" column="name" />
        <result property="image" column="image" />
        <result property="email" column="email" />
        <result property="password" column="password" />
        <result property="type" column="type" />
        <result property="location" column="location" />
        <result property="intro" column="intro" />
    </resultMap>
    <resultMap id="enterprise" type="com.alt.readsearchservice.domain.user.Enterprise">
        <result property="idx" column="idx" />
        <result property="name" column="name" />
        <result property="image" column="image" />
        <result property="email" column="email" />
        <result property="password" column="password" />
        <result property="type" column="type" />
        <result property="location" column="location" />
        <result property="intro" column="intro" />
        <result property="income" column="income" />
        <result property="employee" column="employee" />
    </resultMap>

    <select id="getByEmail" resultMap="enterprise">
        SELECT * FROM user u
        INNER JOIN enterprise s
        ON u.idx = s.idx

        WHERE email = #{email}
    </select>
    <select id="getByName" resultMap="enterprise">
        SELECT * FROM user u
        INNER JOIN enterprise s
        ON u.idx = s.idx

        WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>
</mapper>